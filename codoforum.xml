<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="2.5" method="upgrade">
    <name>codoforum</name>
    <creationDate>May 17, 2014</creationDate>
    <author>Codologic</author>
    <authorEmail>admin@codologic.com</authorEmail>
    <authorUrl>codologic.com</authorUrl>
	<copyright>Copyright (C) 2013. All Rights Reserved</copyright>
	<license>GNU/GPL Version 3 or later - http://www.gnu.org/licenses/gpl-3.0.html</license>
	<version>1.0</version>
	<description><![CDATA[
		<h1>codoforum V.1.0</h1>
		<div style="clear: both;"></div>
		<p>Modern forum system <strong>Built for Joomla 2.5 , 3.X.</strong></p>
		<p>Created by <a href="http://codologic.com" target="_blank">CODOLOGIC | codologic.com</a>
	]]></description>


    <files>                

        <filename>codoforum.php</filename>
        <filename>error.php</filename>
        <filename>README.md</filename>
        <filename>codoforum.xml</filename>
	    <folder>site</folder>
	    <folder>views</folder>
	    
    </files>
        
    <install>
        <sql>
            <file charset="utf8" driver="mysql">sql/install.mysql.utf8.sql</file>
        </sql>
    </install>
    <uninstall>
        <sql>
            <file charset="utf8" driver="mysql">sql/uninstall.mysql.utf8.sql</file>
        </sql>
    </uninstall>
 
    <administration>
        
        		<!-- Administration Menu Section -->
		<menu>COM_CODOFORUM_MENU</menu>
		<!-- Administration Main File Copy Section -->
		<!-- Note the folder attribute: This attribute describes the folder
			to copy FROM in the package to install therefore files copied
			in this section are copied from /admin/ in the package -->
		<files folder="admin">
			<!-- Admin Main File Copy Section -->
			<filename>index.html</filename>
			<filename>codoforum.php</filename>
			<filename>controller.php</filename>
			<!-- SQL files section -->
			<folder>sql</folder>
			<!-- tables files section -->
			<folder>helpers</folder>
			<!-- models files section -->
			<folder>models</folder>
			<!-- views files section -->
			<folder>views</folder>
			<folder>language</folder>

		</files>

		<languages folder="admin">
			<language tag="en-GB">language/en-GB/en-GB.com_codoforum.ini</language>
			<language tag="en-GB">language/en-GB/en-GB.com_codoforum.sys.ini</language>
		</languages>

    </administration>
 
</extension>
